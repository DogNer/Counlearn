<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Counlearn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
    
    <style name="TextMainMenu" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="TextMain" parent="TextAppearance.AppCompat.Large">
        <item name="color">#B18EFF</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="ViewLine">
        <item name="android:layout_width">0.5dp</item>
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="TextUserNameTopList" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="ScoreTopList">
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/comfortaa</item>
    </style>

</resources>
